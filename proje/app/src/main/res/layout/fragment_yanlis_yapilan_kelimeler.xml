<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff2e6"
    tools:context=".YanlisYapilanKelimelerFragment">


    <TextView
        android:id="@+id/textViewDogruYazim"
        android:layout_width="141dp"
        android:layout_height="37dp"
        android:layout_marginStart="40dp"
        android:text="DOĞRU YAZIMI"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/frameLayout3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.794" />

    <TextView
        android:id="@+id/textViewYanlisYazim"
        android:layout_width="141dp"
        android:layout_height="37dp"
        android:layout_marginTop="84dp"
        android:layout_marginEnd="36dp"
        android:text="YANLIŞ YAZIMI"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <FrameLayout
        android:id="@+id/frameLayout3"
        android:layout_width="417dp"
        android:layout_height="417dp"
        android:background="#fff2e6"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewYanlisYazim">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recrecyclerview2"
            android:layout_width="match_parent"
            android:layout_height="451dp"
            android:background="#fff2e6"
            android:orientation="vertical"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:listitem="@layout/item_yanliskelimeler" />


    </FrameLayout>

    <TextView
        android:id="@+id/textView5"
        android:layout_width="387dp"
        android:layout_height="55dp"
        android:layout_marginTop="28dp"
        android:text="YANLIŞ YAPTIĞIM KELİMELER"
        android:textAlignment="center"
        android:textColor="#8D7688"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.333"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>